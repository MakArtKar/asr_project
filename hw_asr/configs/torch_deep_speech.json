{
  "name": "torch_deep_speech",
  "n_gpu": 1,
  "text_encoder": {
    "type": "CTCLMCharTextEncoder",
    "args": {}
  },
  "preprocessing": {
    "sr": 16000,
    "spectrogram": {
      "type": "MelSpectrogram",
      "args": {}
    },
    "log_spec": true
  },
  "augmentations": {
    "wave": [

    ],
    "spectrogram": []
  },
  "arch": {
    "type": "TorchDeepSpeech",
    "args": {
      "n_feats": 128,
      "n_hidden": 1024,
      "dropout": 0
    }
  },
  "data": {
    "train": {
      "batch_size": 16,
      "num_workers": 16,
      "pin_memory": true,
      "datasets": [
        {
          "type": "LibrispeechDataset",
          "args": {
            "part": "train_all",
            "max_audio_length": 20.0,
            "max_text_length": 200
          }
        }
      ]
    },
    "val": {
      "batch_size": 16,
      "num_workers": 16,
      "pin_memory": true,
      "datasets": [
        {
          "type": "LibrispeechDataset",
          "args": {
            "part": "test-clean",
            "max_audio_length": 20.0,
            "max_text_length": 200
          }
        }
      ]
    }
  },
  "optimizer": {
    "type": "AdamW",
    "args": {
      "lr": 1e-4
    }
  },
  "loss": {
    "type": "CTCLoss",
    "args": {}
  },
  "metrics": [
    {
      "type": "ArgmaxCERMetric",
      "args": {
        "name": "CER (argmax)",
        "train": true,
        "eval": true
      }
    },
    {
      "type": "ArgmaxWERMetric",
      "args": {
        "name": "WER (argmax)",
        "train": true,
        "eval": true
      }
    },
    {
      "type": "LMCerMetric",
      "args": {
        "name": "CER (LM)",
        "eval": true
      }
    },
    {
      "type": "LMWerMetric",
      "args": {
        "name": "WER (LM)",
        "eval": true
      }
    }
  ],
  "lr_scheduler": {
    "type": "OneCycleLR",
    "args": {
      "steps_per_epoch": 100,
      "epochs": 50,
      "anneal_strategy": "cos",
      "max_lr": 5e-4,
      "pct_start": 0.01
    }
  },
  "trainer": {
    "epochs": 50,
    "save_dir": "saved/",
    "save_period": 5,
    "verbosity": 2,
    "monitor": "min val_loss",
    "early_stop": 100,
    "visualize": "wandb",
    "wandb_project": "asr_project",
    "len_epoch": 100,
    "grad_norm_clip": 10
  }
}

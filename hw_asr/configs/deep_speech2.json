{
  "name": "deep_speech2",
  "n_gpu": 2,
  "preprocessing": {
    "sr": 16000,
    "spectrogram": {
      "type": "MelSpectrogram",
      "args": {}
    },
    "log_spec": true
  },
  "augmentations": {
    "wave": [],
    "spectrogram": []
  },
  "arch": {
    "type": "DeepSpeech2",
    "args": {
      "n_feats": 128,
      "n_cnn_layers": 5,
      "n_rnn_layers": 5,
      "rnn_dim": 1024,
      "stride": 2,
      "dropout": 0.1
    }
  },
  "data": {
    "train": {
      "batch_size": 16,
      "num_workers": 8,
      "pin_memory": true,
      "datasets": [
        {
          "type": "LibrispeechDataset",
          "args": {
            "part": "train_all",
            "max_audio_length": 20.0,
            "max_text_length": 200
          }
        },
        {
          "type": "LJspeechDataset",
          "args": {
            "part": "dataset",
            "max_audio_length": 20.0,
            "max_text_length": 200
          }
        }
      ]
    },
    "test_clean": {
      "batch_size": 16,
      "num_workers": 8,
      "pin_memory": true,
      "datasets": [
        {
          "type": "LibrispeechDataset",
          "args": {
            "part": "test-clean",
            "max_audio_length": 20.0,
            "max_text_length": 200
          }
        }
      ]
    },
    "test_other": {
      "batch_size": 16,
      "num_workers": 8,
      "pin_memory": true,
      "datasets": [
        {
          "type": "LibrispeechDataset",
          "args": {
            "part": "test-other",
            "max_audio_length": 20.0,
            "max_text_length": 200
          }
        }
      ]
    }
  },
  "optimizer": {
    "type": "AdamW",
    "args": {
      "lr": 1e-4
    }
  },
  "loss": {
    "type": "CTCLoss",
    "args": {}
  },
  "metrics": [
    {
      "type": "ArgmaxWERMetric",
      "args": {
        "name": "WER (argmax)"
      }
    },
    {
      "type": "ArgmaxCERMetric",
      "args": {
        "name": "CER (argmax)"
      }
    }
  ],
  "lr_scheduler": {
    "type": "OneCycleLR",
    "args": {
      "steps_per_epoch": 100,
      "epochs": 100,
      "anneal_strategy": "cos",
      "max_lr": 5e-4
    }
  },
  "trainer": {
    "epochs": 100,
    "save_dir": "saved/",
    "save_period": 5,
    "verbosity": 2,
    "monitor": "min val_loss",
    "early_stop": 100,
    "visualize": "wandb",
    "wandb_project": "asr_project",
    "len_epoch": 100,
    "grad_norm_clip": 10
  }
}

{
  "name": "deep_speech2",
  "n_gpu": 4,
  "text_encoder": {
    "type": "CTCLMCharTextEncoder",
    "args": {}
  },
  "preprocessing": {
    "sr": 16000,
    "spectrogram": {
      "type": "MelSpectrogram",
      "args": {}
    },
    "log_spec": true
  },
  "augmentations": {
    "wave": [
      {
        "type": "Gain",
        "args": {
          "sample_rate": 16000,
          "p": 0.2,
          "min_gain_in_db": -15.0,
          "max_gain_in_db": 5.0
        }
      },
      {
        "type": "PolarityInversion",
        "args": {
          "sample_rate": 16000,
          "p": 0.1
        }
      },
      {
        "type": "AddColoredNoise",
        "args": {
          "sample_rate": 16000,
          "p": 0.2
        }
      },
      {
        "type": "ShuffleChannels",
        "args": {
          "sample_rate": 16000,
          "p": 0.1
        }
      },
      {
        "type": "Shift",
        "args": {
          "sample_rate": 16000,
          "p": 0.2
        }
      },
      {
        "type": "PitchShift",
        "args": {
          "sample_rate": 16000,
          "p": 0.1
        }
      }
    ],
    "spectrogram": []
  },
  "arch": {
    "type": "DeepSpeech2",
    "args": {
      "n_feats": 128,
      "n_cnn_layers": 3,
      "n_rnn_layers": 5,
      "rnn_dim": 512,
      "stride": 2,
      "dropout": 0.2
    }
  },
  "data": {
    "train": {
      "batch_size": 16,
      "num_workers": 8,
      "pin_memory": true,
      "datasets": [
        {
          "type": "LibrispeechDataset",
          "args": {
            "part": "train_all",
            "max_audio_length": 20.0,
            "max_text_length": 200
          }
        },
        {
          "type": "LJspeechDataset",
          "args": {
            "part": "train",
            "max_audio_length": 20.0,
            "max_text_length": 200
          }
        },
        {
          "type": "CommonVoice",
          "args": {
            "part": "train",
            "max_audio_length": 20.0,
            "max_text_length": 200,
            "limit": 300000
          }
        }
      ]
    },
    "test_clean": {
      "batch_size": 16,
      "num_workers": 8,
      "pin_memory": true,
      "datasets": [
        {
          "type": "LibrispeechDataset",
          "args": {
            "part": "test-clean",
            "max_audio_length": 20.0,
            "max_text_length": 200
          }
        }
      ]
    },
    "test_other": {
      "batch_size": 16,
      "num_workers": 8,
      "pin_memory": true,
      "datasets": [
        {
          "type": "LibrispeechDataset",
          "args": {
            "part": "test-other",
            "max_audio_length": 20.0,
            "max_text_length": 200
          }
        }
      ]
    }
  },
  "optimizer": {
    "type": "AdamW",
    "args": {
      "lr": 1e-4
    }
  },
  "loss": {
    "type": "CTCLoss",
    "args": {}
  },
  "metrics": [
    {
      "type": "ArgmaxCERMetric",
      "args": {
        "name": "CER (argmax)",
        "train": true,
        "eval": true
      }
    },
    {
      "type": "ArgmaxWERMetric",
      "args": {
        "name": "WER (argmax)",
        "train": true,
        "eval": true
      }
    },
    {
      "type": "LMCerMetric",
      "args": {
        "name": "CER (LM)",
        "eval": true,
        "n_jobs": 8
      }
    },
    {
      "type": "LMWerMetric",
      "args": {
        "name": "WER (LM)",
        "eval": true,
        "n_jobs": 8
      }
    }
  ],
  "lr_scheduler": {
    "type": "OneCycleLR",
    "args": {
      "steps_per_epoch": 1001,
      "epochs": 5,
      "anneal_strategy": "cos",
      "max_lr": 2e-4
    }
  },
  "trainer": {
    "epochs": 10,
    "save_dir": "saved/",
    "save_period": 5,
    "verbosity": 2,
    "monitor": "min loss_test_other",
    "early_stop": 100,
    "visualize": "wandb",
    "wandb_project": "asr_project",
    "len_epoch": 1000,
    "grad_norm_clip": 10
  }
}
